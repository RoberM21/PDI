<div class="container z-depth-3 panel">
  <h3 class=" titulo">Incidencia</h3>
  <%if @current_user.rol == "root" %>
  <%= link_to 'Registrar', new_incidence_path, class:'btn bo' %>
  <%end%>
    <table class="striped centered" id="my-table">
  <thead>
    <tr>
      <th>Prioridad</th>
      <th>Estado</th>
      <th>Comentario</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @incidences.each do |incidence| %>
      <tr>
        <%case incidence.prioridad%>
            <%when "1"%>
              <td>Alta</td>
            <%when "2"%>
              <td>Media</td>
            <%when "3"%>
              <td>Baja</td>
        <%end%>
        <td><%= incidence.estado %></td>
        <td><%= incidence.comentario %></td>
        <td>
          <%= link_to 'Eliminar', incidence, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn red' %>
          <%= link_to 'Editar', edit_incidence_path(incidence,area_id: incidence.area_id), class:'btn'%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<script type="text/javascript">
$(document).ready(function(){
    $('#my-table').dynatable();
  });
</script>
